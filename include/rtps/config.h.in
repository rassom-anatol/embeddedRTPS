#ifdef STM32CUBEIDE
const int THREAD_POOL_WRITER_PRIO = 19;
const int THREAD_POOL_READER_PRIO = 19;
#else
const int THREAD_POOL_WRITER_PRIO = 3;
const int THREAD_POOL_READER_PRIO = 3;
#endif
const int THREAD_POOL_WORKLOAD_QUEUE_LENGTH = 10;

