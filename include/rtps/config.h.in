#define ERTPS_MAX_SERVICES @ERTPS_MAX_SERVICES@
#define ERTPS_MAX_CLIENTS @ERTPS_MAX_CLIENTS@

#define ERTPS_TYPE_NAME_MAX_LENGTH @ERTPS_TYPE_NAME_MAX_LENGTH@
