const uint8_t MAX_NUM_UNMATCHED_REMOTE_WRITERS = 100;
const uint8_t MAX_NUM_UNMATCHED_REMOTE_READERS = 10;

const uint8_t HISTORY_SIZE = ERTPS_MAX_HISTORY;

const uint8_t MAX_TYPENAME_LENGTH =  ERTPS_TYPE_NAME_MAX_LENGTH;
